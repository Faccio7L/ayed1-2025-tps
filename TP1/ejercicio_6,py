from typing import List



def entero_a_lista(n: int) -> list[int]:
    """
    Convierte un entero a una lista de sus dígitos.
    pre: Recibe un entero.
    post: Retorna el entero recibido en forma de lista, un dígito = un índice.
    """
    lista = []
    while n > 0:
        lista.append(n % 10)
        n = n // 10
    lista.reverse()
    return lista


def lista_a_entero(lista: list[int]) -> int:
    """
    Transforma una lista de enteros en un número entero.
    pre: Recibe una lista de enteros.
    post: Retorna un entero.
    """
    entero = 0
    for digito in lista:
        entero = entero * 10 + digito #corro un 0 y agrego el digito!
    return entero


def main() -> None:
    """
    Muestra en pantalla la unión de dos números enteros usando solo operaciones matemáticas.
    """
    num_1 = int(input("Ingrese un número entero: "))
    lista_1 = entero_a_lista(num_1)

    num_2 = int(input("Ingrese otro número entero: "))
    lista_2 = entero_a_lista(num_2)

    union_lista = lista_1 + lista_2  
    union_enteros = lista_a_entero(union_lista)
    print(f"La unión de los números enteros es: {union_enteros}")


main()



